@page
@model GetTop10LineInputModel
@{
  ViewData["Title"] = "Get Top 10 Stations Input";
}

<div class="container">  
    <h2>Which Line(s) are you interested in?</h2>  
    <hr />  
    <br />  
		<form action="Top10LineInfo" method="get">
				
        <div class="row">  
            <div class="col-md-4">  
                <label asp-for="Input">Enter Line name (full or partial):</label>  
                <input asp-for="Input" class="form-control" />  
            </div>  
        </div>   
				
        <br />  
        <input type="submit" value="Lookup" class="btn btn-primary" />  
        <a class="btn btn-default" href="/">Cancel</a>  
				
    </form>
</div>

